<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/scheduleSearchEditText"
        android:layout_width="267dp"
        android:layout_height="47dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="43dp"
        android:hint="검색어를 입력하세요"
        app:layout_constraintBottom_toTopOf="@+id/schedule_recyclerView"
        app:layout_constraintEnd_toStartOf="@+id/scheduleSearchBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scheduleSearch_recyclerView"
        android:layout_width="369dp"
        android:layout_height="548dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scheduleSearchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="42dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/schedule_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scheduleSearchEditText"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>